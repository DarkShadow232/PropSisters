<%- include('../partials/header') %>

<% if (error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<div class="row mb-4">
  <div class="col">
    <h1 class="h3 mb-0">
      <i class="bi bi-tools"></i> Finish Requests
    </h1>
    <p class="text-muted">Manage property finishing requests from users</p>
  </div>
  <div class="col-auto">
    <div class="btn-group">
      <a href="/finish-requests?status=all" class="btn btn-<%= currentFilter === 'all' ? 'primary' : 'outline-primary' %>">
        All
      </a>
      <a href="/finish-requests?status=pending" class="btn btn-<%= currentFilter === 'pending' ? 'warning' : 'outline-warning' %>">
        Pending
      </a>
      <a href="/finish-requests?status=reviewed" class="btn btn-<%= currentFilter === 'reviewed' ? 'info' : 'outline-info' %>">
        Reviewed
      </a>
      <a href="/finish-requests?status=in-progress" class="btn btn-<%= currentFilter === 'in-progress' ? 'primary' : 'outline-primary' %>">
        In Progress
      </a>
      <a href="/finish-requests?status=completed" class="btn btn-<%= currentFilter === 'completed' ? 'success' : 'outline-success' %>">
        Completed
      </a>
    </div>
  </div>
</div>

<!-- Filters -->
<%- include('../partials/filters', { search, status, priority, sort, limit }) %>

<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <% if (finishRequests && finishRequests.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Request ID</th>
              <th>User</th>
              <th>Type</th>
              <th>Property Type</th>
              <th>Budget</th>
              <th>Timeline</th>
              <th>Status</th>
              <th>Priority</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% finishRequests.forEach(request => { %>
              <tr>
                <td><small class="font-monospace"><%= request.id.toString().substring(0, 8) %>...</small></td>
                <td><%= request.userName || 'Unknown User' %></td>
                <td><%= request.requestType %></td>
                <td><%= request.propertyType %></td>
                <td><%= request.budget %></td>
                <td><%= request.timeline %></td>
                <td>
                  <% if (request.status === 'pending') { %>
                    <span class="badge bg-warning">Pending</span>
                  <% } else if (request.status === 'reviewed') { %>
                    <span class="badge bg-info">Reviewed</span>
                  <% } else if (request.status === 'in-progress') { %>
                    <span class="badge bg-primary">In Progress</span>
                  <% } else if (request.status === 'completed') { %>
                    <span class="badge bg-success">Completed</span>
                  <% } else if (request.status === 'cancelled') { %>
                    <span class="badge bg-danger">Cancelled</span>
                  <% } %>
                </td>
                <td>
                  <% if (request.priority === 'low') { %>
                    <span class="badge bg-success">Low</span>
                  <% } else if (request.priority === 'medium') { %>
                    <span class="badge bg-warning">Medium</span>
                  <% } else if (request.priority === 'high') { %>
                    <span class="badge bg-danger">High</span>
                  <% } else if (request.priority === 'urgent') { %>
                    <span class="badge bg-dark">Urgent</span>
                  <% } %>
                </td>
                <td><%= request.createdAt ? new Date(request.createdAt).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <a href="/finish-requests/<%= request.id %>" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-eye"></i> View
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5 text-muted">
        <i class="bi bi-tools fs-1 d-block mb-3"></i>
        <% if (currentFilter !== 'all') { %>
          <p>No <%= currentFilter %> finish requests found</p>
        <% } else { %>
          <p>No finish requests found</p>
        <% } %>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
